@import '../../libs/variables'

.c-predictions
    margin sectionMargin

    .label
        font-size labelFontSize
        padding 10px 0px
        color titleFontColor
        font-weight bold
        font-family titleFont

    .buttonsection
        padding 5px 0px 20px
        font-family bodyFont
        color bodyFontColor

    .btn-default
        color bodyFontColor

    .btn-default:hover
        color bodyFontColor

    .skillset
        display flex 
        flex-wrap wrap

    .disciplinename
        color bodyFontColor
        font-family bodyFont
        font-size bodyFontSize

    .disciplinedescription
        display flex
        align-items center
        padding 10px
        margin-bottom 3px
        color bodyFontColor

    .disciplinephoto
        margin 20px
        width (dimensionOfPicture/2)
        height (dimensionOfPicture/2)
        background-size cover
        background-repeat no-repeat
        background-position center
        box-shadow imageShadow
        border 2px solid titleFontColor
        border-radius borderRadius

    .assetphoto
        margin-right 5px
        width (dimensionOfPicture/4)
        height (dimensionOfPicture/4)
        background-size cover
        background-repeat no-repeat
        background-position center
        background-color white
        box-shadow imageShadow
        border 2px solid titleFontColor
        border-radius borderRadius

    .blueskill
        padding 10px
        margin-right 5px 
        border-radius 3px
        border 2px solid titleFontColor


